<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:tag="RESERVAS_FRAGMENT">

    <!-- TÃ­tulo del Fragment -->
    <TextView
        android:id="@+id/tvTituloReservas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mis_reservas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewReservas"
        android:layout_width="match_parent"
        android:layout_height="615dp"
        android:layout_gravity="center"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/tvSiguiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_siguiente" />

</LinearLayout>
